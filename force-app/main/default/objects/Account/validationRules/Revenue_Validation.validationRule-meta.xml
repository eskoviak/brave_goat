<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Revenue_Validation</fullName>
    <active>true</active>
    <description>Revenue must be 20 times the minimum spending</description>
    <errorConditionFormula>AnnualRevenue  &lt;  20 *  $CustomMetadata.Support_Tier__mdt.Gold.Minimum_Spending__c</errorConditionFormula>
    <errorMessage>Minimum Annual Spending not met</errorMessage>
</ValidationRule>
